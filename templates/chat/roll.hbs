<div class="dice-roll">
  {{#ifIsStarforgedRoll}}

  <div class="dice-result ironsworn-roll">

    <div class="dice-formula">
      <p class="hit-type">{{starforgedHitType}}</p>
      <p>{{{actionDieFormula}}} {{localize 'STARFORGED.Versus'}} {{{challengeDice}}}</p>
    </div>
  </div>

  {{else}}

  {{#if flavor}}
  <div class="dice-flavor">{{flavor}}</div>
  {{/if}}
  <div class="dice-result">
    <div class="dice-formula">{{formula}}</div>
    {{{tooltip}}}
    <h4 class="dice-total">{{total}}</h4>
  </div>

  {{/ifIsStarforgedRoll}}
</div>
