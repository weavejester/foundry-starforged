<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <h1>
      <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
    </h1>
  </header>

  <section class="flexrow nogrow sheet-area">
    <label class="left-label" for="data.rank">{{localize 'STARFORGED.Rank'}}:</label>
    <select id="data.rank" name="data.rank">
      {{selectOptions ranks selected=data.data.rank localize=true}}
    </select>
  </section>

  <div class="flexrow nogrow progresses sheet-area">
    <div class="clickable block clearProgress" title="{{localize 'STARFORGED.ClearProgress'}}">
      <i class="fas fa-stop-circle"></i>
    </div>
    <div class="progress-bar">
      {{#each (progressCharacters data.data.current)}}
      <div class="progress block">{{{this}}}</div>
      {{/each}}
    </div>
    <div class="clickable block markProgress" title="{{localize 'STARFORGED.MarkProgress'}}">
      <i class="fas fa-chevron-circle-right"></i>
    </div>
    <div class="clickable block fulfillProgress" title="{{localize 'STARFORGED.FulfillVow'}}">
      <i class="fas fa-check-circle"></i>
    </div>
  </div>

  <section class="flexcol sheet-area">
    <label class="top-label" for="data.description">{{localize 'STARFORGED.Description'}}:</label>
    <textarea name="data.description">{{item.data.data.description}}</textarea>
  </section>

  <div class="flexrow nogrow sheet-area">
    <button class="delete"><i class="fas fa-trash"></i> Delete</button>
  </div>

</form>
