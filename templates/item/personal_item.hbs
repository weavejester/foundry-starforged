<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <h1>
      <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
    </h1>
  </header>

  <section class="sheet-area flexcol">
    <label class="top-label" for="data.description">{{localize 'STARFORGED.Description'}}</label>
    <textarea name="data.description">{{item.data.description}}</textarea>
  </section>

  <div class="flexrow nogrow sheet-area">
    <button class="delete"><i class="fas fa-trash"></i> Delete</button>
  </div>
</form>
