        <div class="tab flexcol" data-tab="background" data-group="primary-tabs">
            <section class="sheet-area flexrow profile">
                <div class="flexcol">
                    <div class="flexrow">
                        <label class="details" for="name">{{localize 'STARFORGED.Name'}}</label>
                        <input name="name" type="text" value="{{actor.name}}" />
